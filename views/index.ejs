<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/styles.css">
    <title>Dongeng Nusantara</title>
</head>
<body>
    <header>
        <h1>Dongeng Nusantara</h1>
        <nav>
            <ul>
                <li><a href="/">Beranda</a></li>
                <li><a href="/about">Tentang</a></li>
                <li><a href="#">Populer</a></li>
            </ul>
        </nav>
    </header>
    <section>
        <h2>Dongeng Terbaru</h2>
        <div class="dongeng-list">
            <% dongengs.forEach((dongeng, index) => { %>
                <div class="dongeng-item">
                    <a href="/dongeng/<%= index %>">
                        <img src="<%= dongeng.cover %>" alt="<%= dongeng.title %>">
                        <h3><%= dongeng.title %></h3>
                    </a>
                </div>
            <% }) %>
        </div>
    </section>
</body>
</html>
